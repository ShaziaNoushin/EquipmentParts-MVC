@model EquipmentPart_Mid_Month_Project.ViewModels.EquipmentEditModel
<h3>Edit equipment</h3>
<input type="hidden" name="sever-action" id="server-action" value="@ViewData["Act"]" />
@Html.HiddenFor(x=> x.EquipmentId)
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.EquipmentName, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-4">
        @Html.TextBoxFor(x => x.EquipmentName, new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(x => x.EquipmentName, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
</div>
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.DeliveryDate, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-4">
        @Html.TextBoxFor(x => x.DeliveryDate, new { @class = "form-control form-control-sm date" })
        @Html.ValidationMessageFor(x => x.DeliveryDate, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
</div>
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.Price, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-4">
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
</div>

<div class="form-group row mb-1">
    @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2 text-end py-2" })
    <div class="col-4 py-2">
        @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm", type = "file" })
        @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger", style = "font-size:small" })
    </div>
    <div class="col-2 py-0">
        <img src="~/Pictures/@ViewData["CurrentPic"]" class="img-thumbnail rounded-1" id="preview" style="width:40px" />
    </div>
</div>

<div class="row mb-1">
    <div class="col-4 offset-2">
        <h4>Work log</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Part name</th>
                    <th>Quantity</th>
                    <td> <button type="submit" class="btn btn-secondary btn-sm add" name="act" value="add" formnovalidate><i class="bi bi-plus"></i></button></td>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Parts.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.TextBoxFor(x => Model.Parts[i].PartName, new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(x => Model.Parts[i].PartName, "", new { @class = "text-danger ", style = "font-size:small" })
                        </td>
                        <td>
                            @Html.TextBoxFor(x => Model.Parts[i].Quantity, new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(x => Model.Parts[i].Quantity, "", new { @class = "text-danger ", style = "font-size:small" })
                        </td>
                        <td>
                            <button type="submit" class="btn btn-secondary btn-sm" name="act" value="remove_@i" formnovalidate><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row mb-1">
    <div class="col-6 offset-2">
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary" name="act" value="update">Save to database</button>
        </div>
    </div>
</div>
